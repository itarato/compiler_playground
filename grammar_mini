Prog ::= BuildingBlockList
BuildingBlockList ::= BuildingBlock BuildingBlockList | ε
BuildingBlock ::= FnDef | StmtList
FnDef ::= fn name popen ArgList pclose bopen StmtList
ArgList ::= name ArgRest | ε
ArgRest ::= comma name ArgRest | ε
StmtList ::= Stmt StmtList | ε
Stmt ::= Assign | If | FnCall
Assign ::= name eq Expr
If ::= if popen Expr pclose bopen StmtList bclose else bopen StmtList bclose
FnCall ::= name bopen ArgList bclose
Expr ::= ExprElem ExprRest
ExprRest ::= Op Expr | ε
Op ::= add | sub
ExprElem ::= FnCall | num | name
